#lang racket/gui
;--------------------------------------------------------------------------------------------------------------------------------
;publico
;--------------------------------------------------------------------------------------------------------------------------------
(provide abrir-mensaje)
;--------------------------------------------------------------------------------------------------------------------------------
;ventana-mensaje
;--------------------------------------------------------------------------------------------------------------------------------
(define ventana-mensaje
  (new frame%[label "Mensaje"]))

(define contenido-mensaje
  (new message%
       [min-height 30]
       [min-width 150]
       [parent ventana-mensaje]
       [label ""]))

(define (abrir-mensaje mensaje)
  (send contenido-mensaje set-label mensaje)
  (send ventana-mensaje show #t)
  (sleep/yield 1)
  (send ventana-mensaje show #f))
;--------------------------------------------------------------------------------------------------------------------------------
